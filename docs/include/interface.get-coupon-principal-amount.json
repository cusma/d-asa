{
  "name": "get_coupon_principal_amount",
  "desc": "Get the coupon payment principal amount",
  "readonly": true,
  "args": [
    {
      "type": "address",
      "name": "holding_address",
      "desc": "Account Holding Address"
    },
    {
      "type": "uint64",
      "name": "coupon_index",
      "desc": "1-based coupon index for the amount"
    }
  ],
  "returns": {
    "type": "uint64",
    "desc": "Coupon payment principal amount in denomination asset"
  },
  "errors": [
    {
      "code": "INVALID_HOLDING_ADDRESS",
      "message": "Invalid Holding Address"
    },
    {
      "code": "INVALID_COUPON_INDEX",
      "message": "Invalid 1-based coupon index"
    }
  ]
}
